<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backk"
    android:visibility="visible"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/Reset"
        android:layout_width="349dp"
        android:layout_height="495dp"
        android:rotation="0"
        android:rotationX="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461"
        app:srcCompat="@drawable/tasbi" />

    <CheckBox
        android:id="@+id/unl"
        android:layout_width="190dp"
        android:layout_height="88dp"
        android:layout_marginStart="150dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:text="No Limit"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="679dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044">

        <CheckBox
            android:id="@+id/limit33"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="612dp"
            android:layout_marginBottom="71dp"
            android:text="LIMIT  33"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/limit34"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="612dp"
            android:layout_marginBottom="71dp"
            android:text="LIMIT  34"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/chkboxt"
            android:layout_width="127dp"
            android:layout_height="60dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="612dp"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:layout_marginBottom="71dp"
            android:text="LIMIT  100"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/limit33" />

        <CheckBox
            android:id="@+id/infinite"
            android:layout_width="127dp"
            android:layout_height="60dp"
            android:layout_marginBottom="71dp"
            android:text="No Limit"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/counter"
        android:layout_width="168dp"
        android:layout_height="82dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="65sp"
        app:layout_constraintBottom_toBottomOf="@+id/Reset"
        app:layout_constraintEnd_toEndOf="@+id/Reset"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="@+id/Reset"
        app:layout_constraintTop_toTopOf="@+id/Reset"
        app:layout_constraintVertical_bias="0.351" />

    <ImageButton

        android:id="@+id/btnInfinite"
        android:layout_width="154dp"
        android:layout_height="132dp"
        android:background="@drawable/customfile"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Reset"
        app:layout_constraintVertical_bias="0.772" />

    <ImageButton

        android:id="@+id/btnReset"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/customfile"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Reset"
        app:layout_constraintVertical_bias="0.606" />


</androidx.constraintlayout.widget.ConstraintLayout>